<body class="container">
    <header class="d-flex justify-content-between align-items-center mb-4">
        <h1>Admin Dashboard</h1>
        <div class="btn-group">
            <a href="/" class="btn btn-primary">Home</a>
            <a href="/admin/applications" class="btn btn-secondary">View Applications</a>
            <a href="/logout" class="btn btn-danger">Log Out</a>
            <a href="/admin/dashboard/edit" class="btn btn-secondary">Edit Profile</a>
        </div>
    </header>

    <section id="admin-info" class="mb-5">
        <h2>Welcome, {{firstName}} {{lastName}}</h2>
        <p><strong>Summary:</strong> {{summary}}</p>
        {{#if profile_image}}
        <div class="profile-image">
            <h3>Profile Picture:</h3>
            <img src="{{profileImage}}" alt="Profile Picture" class="img-thumbnail" />
        </div>
        {{/if}}
    </section>

    <section id="admin-actions">
        <h2>Admin Actions</h2>
        <p>Use the buttons above to manage your tasks, view applications, or log out.</p>
    </section>
</body>
