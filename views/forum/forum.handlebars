<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{subject}} Forum</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <header>
        <h1>{{subject}} Forum</h1>
    </header>
    <main>
        <section id="new-post">
            <h2>Create a New Post?</h2>
            <form action="/forum/{{subject_id}}" method="POST">
                <label for="authorID">authorID</label>
                <input type="text" id="authorID" name="authorID" required>

                <label for ="title">Post Title</label>
                <input type="text" id="title" name="title" required>

                <label for="content">Content:</label>
                <textarea id="content" name="content" rows="5" required>

                </textarea>

                <button type="submit">Post</button>            
            </form>
        </section>

        <section id="posts">
            <h2>Posts</h2>

            {{#if posts}}
                {{#each posts}}
                <article class = "post">
                    <h3>{{title}}</h3>
                    <p><strong>Author:</strong> {{author}}</p>
                    <p>{{content}}</p>
                    <p><strong>Posted At:</strong> {{created_at}}</p>

                    <a href="/forum/{{../subject_id}}/{{_id}}">
                        <button type="button">Edit</button>
                    </a>

                    <form action="/forum/{{../subject_id}}/{{_id}}" method="POST" class="delete-post">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="authorID" value="{{author}}">
                        <button type="submit">Delete Post</button>
                    </form>

                    <form action="/forum/{{../subject_id}}/{{post_id}}/replies" method="POST" class="reply-form">
                        <label for="replyAuthorID">Author ID:</label>
                        <input type="text" id="replyAuthorID" name="authorID" required>

                        <label for="replyContent">Reply:</label>
                        <textarea id="replyContent" name="content" rows="2" required></textarea>

                        <button type="submit">Add Reply</button>
                    </form>

                    {{#if replies}}
                    <section class="replies">
                        <h4>Replies:</h4>
                        <ul>
                            {{#each replies}}
                            <li>
                                <p><strong>Author:</strong> {{author}}</p>
                                <p>{{content}}</p>
                                <p><strong>Replied At:</strong> {{created_at}}</p>

                                <form action="/forum/{{../../_id}}/{{../_id}}/replies/{{_id}}" method="PATCH" class="edit-reply">
                                    <label for="updatedReplyContent">Edit Reply:</label>
                                    <textarea id="updatedReplyContent" name="updatedContent" rows="2" required></textarea>
                                    <input type="hidden" name="authorID" value="{{author}}">
                                    <button type="submit">Update Reply</button>
                                </form>

                                <form action="/forum/{{../../_id}}/{{../_id}}/replies/{{_id}}" method="DELETE" class="delete-reply">
                                    <input type="hidden" name="authorID" value="{{author}}">
                                    <button type="submit">Delete Reply</button>
                                </form>
                            </li>
                            {{/each}}
                        </ul>
                    </section>
                    {{/if}}
                </article>
                {{/each}}
            {{else}}
                <p>No posts found in this forum. Start us off!</p>
            {{/if}}
        </section>
    </main>
    <footer>
        <p>&copy; {{currentYear}} Forum Application</p>
    </footer>
</body>
</html>