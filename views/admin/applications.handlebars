<body class="container">
    <h1 class="text-center mb-5">{{pageTitle}}</h1>

    {{#if applications}}
        <div class="list-group">
            {{#each applications}}
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5>{{first_name}} {{last_name}}</h5>
                        <p>Email: {{email}}</p>
                        <p>Summary: {{summary}}</p>
                    </div>
                    <div>
                        <form action="/admin/applications/{{_id}}/approve" method="POST" class="d-inline">
                            <button class="btn btn-success" type="submit">Approve</button>
                        </form>
                        <form action="/admin/applications/{{_id}}/reject" method="POST" class="d-inline">
                            <button class="btn btn-danger" type="submit">Reject</button>
                        </form>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p class="text-center">No pending applications.</p>
    {{/if}}
</body>
