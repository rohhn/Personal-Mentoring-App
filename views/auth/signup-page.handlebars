<main class="container">
    <h1 class="text-center mb-5">{{pageTitle}}</h1>

    <section id="signup-section">
        <div class="d-flex justify-content-center">
            <form
                name="sign-up"
                id="signup-form"
                method="post"
                class="w-75"
                enctype="multipart/form-data"
                action="/signup"
            >
                <div class="form-group mb-2">
                    <fieldset id="usert-type-fieldset">
                        <legend>You are a:</legend>

                        <div class="form-check form-check-inline">
                            <input
                                class="form-check-input"
                                type="radio"
                                id="mentee-radio-input"
                                name="user_type"
                                value="mentee"
                                checked
                            />
                            <label
                                class="form-check-label"
                                for="mentee-radio-input"
                            >Mentee</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input
                                class="form-check-input"
                                type="radio"
                                id="mentor-radio-input"
                                name="user_type"
                                value="mentor"
                            />
                            <label
                                class="form-check-label"
                                for="mentor-radio-input"
                            >Mentor</label>
                        </div>
                    </fieldset>
                </div>

                <div class="form-group mb-2">
                    <label for="fname-input">First Name</label>
                    <input
                        id="fname-input"
                        class="form-control"
                        name="first_name"
                        type="text"
                        required
                    />
                </div>
                <div class="form-group mb-2">
                    <label for="lname-input">Last Name</label>
                    <input
                        id="lname-input"
                        class="form-control"
                        name="last_name"
                        type="text"
                        required
                    />
                </div>

                <div class="form-group mb-2">
                    <label for="email-input">Email</label>
                    <input
                        id="email-input"
                        class="form-control"
                        name="email"
                        type="email"
                        placeholder="abc@gmail.com"
                        required
                    />
                </div>

                <div class="form-group mb-2">
                    <label>Date of birth</label>
                    <input
                        id="dob-input"
                        class="form-control"
                        name="dob"
                        type="date"
                        required
                    />
                </div>

                <div class="form-group mb-2">
                    <label>Upload a Profile Picture</label>
                    <input
                        id="profile_image-input"
                        class="form-control"
                        name="profile_image"
                        type="file"
                        accept="image/png, image/jpg, image/jpeg"
                    />
                </div>

                <div class="form-group mb-2">
                    <label>Personal Summary</label>
                    <input
                        id="summary-input"
                        class="form-control"
                        name="summary"
                        type="text"
                        required
                    />
                </div>

                <div class="form-group mb-2">
                    <label for="password-input">Create a password</label>
                    <input
                        id="password-input"
                        class="form-control"
                        name="password"
                        type="password"
                        placeholder="Password"
                        required
                    />
                </div>

                <button
                    class="btn btn-primary form-control mt-4"
                    type="submit"
                >Sign Up</button>
            </form>
        </div>

    </section>
</main>

{{> auth/signup_dynamic_form}}
{{> auth/signup_validate}}