<main class="container my-3">
    <h1 class="text-center mb-5">{{pageTitle}}</h1>

    {{#if applications}}
        <div class="row gy-2">
            {{#each applications}}
                <div class="card">
                    {{! d-flex justify-content-between align-items-center }}
                    <div class="card-body d-flex justify-content-between">
                        <div>
                            <div class="card-title">
                                <h5>{{first_name}} {{last_name}}</h5>
                            </div>
                            <div class="card-text">
                                <p>Email: {{email}}</p>
                                <p>Summary: {{summary}}</p>
                            </div>
                        </div>

                        <div>
                            <a
                                class="btn btn-primary"
                                href="/mentor/{{_id}}"
                            >View Full Profile</a>
                            <form
                                action="/admin/applications/{{_id}}/approve"
                                method="POST"
                                class="d-inline"
                            >
                                <button
                                    class="btn btn-success"
                                    type="submit"
                                >Approve</button>
                            </form>
                            <form
                                action="/admin/applications/{{_id}}/reject"
                                method="POST"
                                class="d-inline"
                            >
                                <button
                                    class="btn btn-danger"
                                    type="submit"
                                >Reject</button>
                            </form>
                        </div>
                    </div>

                </div>
            {{/each}}
        </div>
    {{else}}
        <p class="text-center">No pending applications.</p>
    {{/if}}
</main>