    <header class="bg-primary text-white py-3">
        <div class="container">
            <h1 class="text-center">{{subject}} Forum</h1>
        </div>
    </header>

    <main class="container my-5">
        <section id="new-post" class="mb-5">
            <h2>Create a New Post</h2>
            <form action="/forum/{{forum_id}}" method="POST">
                <div class="mb-3">
                    <label for="authorName" class="form-label">Author Name</label>
                    <input type="text" id="authorName" name="authorName" class="form-control"
                        placeholder="Enter your name" required>
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Post Title</label>
                    <input type="text" id="title" name="title" class="form-control" placeholder="Enter Post Title">
                </div>

                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea id="content" name="content" class="form-control" placeholder="Enter your Post Body"
                        rows="5" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </section>

        <section id="posts">
            <h2>Posts</h2>

            {{#if posts}}
            {{#each posts}}
            <article class="post mb-4 p-3 border rounded">
                <h3>{{title}}</h3>
                <p><strong>Author:</strong> {{authorName}}</p>
                <p><strong>Content:</strong> {{content}}</p>
                <p><strong>Posted At:</strong> {{created_at}}</p>

                <a href="/forum/{{../forum_id}}/{{_id}}" class="btn btn-secondary btn-sm">Edit</a>

                <form action="/forum/{{../forum_id}}/{{_id}}" method="POST" class="d-inline-block ms-2">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="authorName" value="{{authorName}}">
                    <button type="submit" class="btn btn-danger btn-sm">Delete Post</button>
                </form>

                {{#if replies}}
                <section class="replies mt-3">
                    <h4>Replies:</h4>
                    <ul class="list-unstyled">
                        {{#each replies}}
                        <li class="mb-3 p-3 border rounded">
                            <p><strong>Author:</strong> {{replyAuthorName}}</p>
                            <p>{{content}}</p>
                            <p><strong>Replied At:</strong> {{created_at}}</p>

                            <a href="/forum/{{../forum_id}}/{{../_id}}/{{_id}}/edit"
                                class="btn btn-secondary btn-sm">Edit</a>

                            <form action="/forum/{{../../forum_id}}/{{../_id}}/{{_id}}" method="POST"
                                class="d-inline-block ms-2">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-sm">Delete Reply</button>
                            </form>
                        </li>
                        {{/each}}
                    </ul>
                </section>
                {{/if}}

                <a href="/forum/{{../forum_id}}/{{_id}}/reply" class="btn btn-info btn-sm mt-2">Add Reply</a>
            </article>
            {{/each}}
            {{else}}
            <p>No posts found in this forum. Start us off!</p>
            {{/if}}
        </section>
    </main>

    <footer class="bg-dark text-white py-3">
        <div class="container text-center">
            <p>&copy; {{currentYear}} Forum Application</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kaSfT9AyI4gB2VA34X8lN8fKAZgKj8/fb6X6ekc1mjIYtnbF76gh0QgTZ5Bw50Z1"
        crossorigin="anonymous"></script>
</html>