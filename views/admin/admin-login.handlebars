<main class="container">
    <h1 class="text-center mb-5">{{pageTitle}}</h1>

    <section id="login-section">
        <div class="d-flex justify-content-center">
            <form name="admin-login" id="admin-login" method="post" class="w-25" action="/admin/login" enctype="application/x-www-form-urlencoded">
                
                <div class="form-group mb-2">
                    <label for="email">Email</label>
                    <input id="email" class="form-control" name="email" type="email" placeholder="example@example.com">
                </div>
                <div class="form-group mb-2">
                    <label for="password">Password</label>
                    <input id="password" class="form-control" name="password" type="password" placeholder="Password">
                </div>
                
                <button class="btn btn-primary form-control mt-4" type="submit">Login</button>
            </form>
        </div>
        
    </section>
</main>
{{> auth/login_validate}}